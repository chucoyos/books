
<h1>Libros</h1>
<table border="1">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
      <th>Publicated</th>
      <th>Price</th>
      <th>Opciones</th>
    </tr>

  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.description %></td>
      <td><%= book.publication_date %></td>
      <td>$<%= book.price %></td>
      <td>
          <%= link_to "Mostrar", book %>
          <% if signed_in? %>
          <%= link_to "Editar", edit_book_path(book) %>
          <%= link_to "Eliminar", book, method: :delete, data: { confirm: "¿Estás seguro de eliminar este libro?" } %>
        <% end %>
       </td>
       </tr>
  <% end %>
    
  </tbody>
</table>